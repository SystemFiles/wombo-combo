{
	"name": "server",
	"version": "0.1.0",
	"description": "The server that performs all of the combo build processes ",
	"main": "server.js",
	"scripts": {
		"test": "echo \"No test specified\" && exit 0",
		"lint": "eslint ./",
		"start": "node server.js",
		"dev": "nodemon server.js"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended"
		],
		"env": {
			"es6": true,
			"node": true,
			"browser": true
		},
		"parserOptions": {
			"ecmaVersion": 8,
			"sourceType": "module",
			"ecmaFeatures": {
				"modules": true,
				"globalReturn": true,
				"experimentalObjectRestSpread": true
			}
		},
		"rules": {
			"brace-style": [
				"error",
				"1tbs"
			],
			"comma-dangle": [
				"error",
				"never"
			],
			"no-unused-vars": [
				"warn"
			],
			"no-var": [
				"off"
			],
			"one-var": [
				"off"
			]
		}
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"eslint": "7.3.1",
		"express": "^4.17.1",
		"express-rate-limit": "^5.1.3",
		"multer": "^1.4.2",
		"uuid": "^8.2.0"
	},
	"author": "Ben Sykes",
	"license": "Apache2",
	"devDependencies": {
		"nodemon": "^2.0.4"
	}
}
